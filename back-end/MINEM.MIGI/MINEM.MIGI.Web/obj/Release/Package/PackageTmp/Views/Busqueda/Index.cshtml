                    <a class="btn btn-primary w-100 inhabilitar" href="javascript:void(0)" id="btn-guardar">Guardar resultado</a>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <div class="input-group">
                    <a class="btn btn-primary w-100 inhabilitar" href="javascript:void(0)" id="btn-nuevo">Nueva búsqueda</a>
                </div>
            </div>
        </div>
        <div class="col-4">
        </div>
    </div>
    <div class="row">
        <div class="col-12 alert-add"></div>
    </div>
    <div class="row mt-2 mb-2">
        <div class="col-12">
