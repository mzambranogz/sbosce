@{
    ViewBag.Title = "Mantenimiento Anio";
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/plugins/alert.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/migi_mantenimiento_anio.js")"></script>
}

<div class="container-fluid map-root" id="historia">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Busqueda")">Inicio</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Mantenimiento")">Mantenimiento de Tablas</a></li>
                <li class="breadcrumb-item active" aria-current="page">Mantenimiento de Años</li>
            </ol>
        </nav>
    </div>
</div>
<div class="container-fluid my-4" id="cuerpo">
    <div class="row m-0">
        <div class="col-12 cuerpo-interior">
            <div class="container py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-6 pt-4">
                        <div class="h4">Mantenimiento de Años&nbsp;<br><small class="text-muted">Utilice la búsqueda para encontrar el año indicado para el mantenimiento</small></div>
                    </div>
                    <div class="col-md-12 col-lg-6 pt-4">
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-6">&nbsp;</div>
                            <div class="col-sm-12 col-md-6 col-lg-6"><span data-toggle="modal" data-target="#modal-mantenimiento"><a class="agregar-iniciativa" id="btnNuevo" href="javascript:void(0)" data-toggle="tooltip" data-placement="top" title="Agregar un nuevo año"><i class="fas fa-plus px-1"></i>Agregar año</a></span></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-6 pt-4">
                            <div class="form-group">
                                <label for="txt-buscar">Buscar&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="right" title="Utilice la búsqueda ingresando una descripción para ubicar sus registros"></i></label>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-search"></i></span></div>
                                    <input class="form-control" type="text" id="txt-descripcion" placeholder="Ingrese la descripción de su búsqueda" aria-describedby="inputGroup1">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-6 col-lg-6">
                                </div>
                                <div class="col-sm-12 col-md-6 col-lg-6">
                                    <button class="btn btn-info w-100 mb-2" id="btnConsultar"><i class="fas fa-search px-1"></i>Buscar</button>
                                </div>
                            </div>
                    </div>
                    <div class="col-md-12 col-lg-6 pt-4">
                    </div>
                </div>
            </div>
            <div class="container py-4">
                <div class="h5">Bandeja de Años&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="right" title="Bandeja principal donde encontrará todos los años registrados"></i></div>
                <div class="dropdown-divider"></div>
                <div class="row">
                    <div class="col-12 px-0">
                        <div class="table-responsive tabla-principal">
                            <table class="table table-hover" id="tbl">
                                <thead>
                                    <tr class="bg-primary text-white">
                                        <th scope="col" width="3%">
                                            <div class="d-flex flex-column justify-content-between align-items-center">
                                                <div class="d-flex justify-content-between align-items-center">N°&nbsp;</div>
                                                <div class="d-flex justify-content-center align-items-center"><i class="fas fa-info-circle mr-1" data-toggle="tooltip" data-placement="bottom" title="Número de orden"></i></div>
                                            </div>
                                        </th>
                                        <th scope="col" width="15%">
                                            <div class="d-flex flex-column justify-content-between align-items-center">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="pl-1 text-center w-100">CÓDIGO&nbsp;</div><i class="fas fa-sort columna-filtro" id="ID_ANIO"></i>
                                                </div>
                                                <div class="d-flex justify-content-center align-items-center"><i class="fas fa-info-circle mr-1" data-toggle="tooltip" data-placement="bottom" title="código del año"></i></div>
                                            </div>
                                        </th>
                                        <th scope="col" width="75%">
                                            <div class="d-flex flex-column justify-content-between align-items-center">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="pl-1 text-center w-100">AÑO&nbsp;</div><i class="fas fa-sort columna-filtro" id="ANIO"></i>
                                                </div>
                                                <div class="d-flex justify-content-center align-items-center"><i class="fas fa-info-circle mr-1" data-toggle="tooltip" data-placement="bottom" title="Año"></i></div>
                                            </div>
                                        </th>
                                        <th scope="col" width="7%">
                                            <div class="d-flex flex-column justify-content-between align-items-center">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="pl-1 text-center w-100">GESTIÓN&nbsp;</div>
                                                </div>
                                                <div class="d-flex justify-content-center align-items-center"><i class="fas fa-info-circle mr-1" data-toggle="tooltip" data-placement="bottom" title="Herramientas y opciones"></i></div>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <td class="text-left" colspan="2"><strong>Resultado:&nbsp;</strong><span class="inicio-registros">1</span><span id="view-page-result">-<span class="fin-registros">1</span> de <span class="total-registros">1</span> registros</span></td>
                                        <td class="text-right text-xs-left" colspan="5">
                                            <strong>Registros por página&nbsp;</strong>
                                            <select id="catidad-rgistros">
                                                <option value="10" selected>10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>&nbsp;
                                            <span class="pagina">1</span> de <span class="total-paginas">75</span> páginas&nbsp;
                                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                                <button class="btn btn-sm btn-primary" type="button" onclick="fn_avance_grilla(1)"><i class="fas fa-angle-double-left"></i></button>
                                                <button class="btn btn-sm btn-primary" type="button" onclick="fn_avance_grilla(2)"><i class="fas fa-angle-left"></i></button>
                                                <input id="ir-pagina" class="ir-pagina" type="number" value="1" min="1">
                                                <button class="btn btn-sm btn-primary" type="button" onclick="fn_avance_grilla(3)"><i class="fas fa-angle-right"></i></button>
                                                <button class="btn btn-sm btn-primary" type="button" onclick="fn_avance_grilla(4)"><i class="fas fa-angle-double-right"></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-mantenimiento" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="" id="frm">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Registro de nuevo año <br><small class="text-muted">Complete los siguientes campos para registrar un nuevo año</small><small class="text-danger d-block"><strong>(*)&nbsp;</strong>Campos obligatorios</small></h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="txtAnno">Año</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text" id="inputGroup3"><i class="fas fa-user"></i></span></div>
                                    <input class="form-control" type="text" id="txtAnno" placeholder="Ingrese un año" maxlength="4" aria-describedby="inputGroup3">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="alert-add"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-sm btn-info" type="button" id="btnGuardar">Si, grabar</button>
                    <button class="btn btn-sm btn-dark" type="button" id="btnCerrar" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-confirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmar acción</h5>
                <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body medidas-modal">
                <p>¿ Desea eliminar este registro ?</p>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary" type="button" id="btnConfirmar">Si</button>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script>
    var idEliminar = '';
</script>

@Html.Hidden("columna", "ID_ANIO")
@Html.Hidden("orden", "ASC")
