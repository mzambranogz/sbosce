@using MINEM.MIGI.Web.Models
@model LoginViewModel

@{
    ViewBag.Title = "Inicio - Login";
}

@section scripts_footer {
    @*<script src="@Url.Content("~/Scripts/plugins/alert.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/migi_olvidar_contrasena.js")"></script>
}

<div class="container-fluid banner d-flex flex-row justify-content-center align-items-center" id="carousel">
    <div class="banners-degradado">
        <div class="banner-1 banner-mostrado" data-titulo="" data-descripcion=""></div>
    </div>
    <div class="flecha d-none" id="enlaceAspectos"><i class="fas fa-angle-double-right fa-2x text-white btn-slider-bottom"></i></div>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-left"><i class="fas fa-chevron-left fa-3x text-white btn-slider-left d-none"></i></div>
            <div class="col-md-8 col-sm-12 text-center">
                <div class="row">
                    <div class="col-12 d-flex flex-row justify-content-center align-items-end">
                        <div class="slider-pagging d-none"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-right"><i class="fas fa-chevron-right fa-3x text-white btn-slider-right d-none"></i></div>
        </div>
        <div class="row dentro-banner rounded">
            <div class="col-md-6 col-lg-4 p-4 bg-light rounded-right">
                <div class="h4">¿Olvidó su contraseña? <br><small class="text-muted">Ingresa tu usuario / correo electrónico, que registró para su cuenta</small></div>
                <form class="pt-4" id="frmLogin" action="" autocomplete="off">
                    <div class="form-group">
                        <label for="txt-user">Correo electrónico</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-envelope"></i></span></div>
                            <input class="form-control estilo-01" type="email" id="txt-user" placeholder="Ingresar correo electrónico" aria-describedby="inputGroup1" maxlength="50" pattern="^[a-zA-Z0-9.!#$%&amp;’*+/=?^_`{|}~-]+@("@")[a-zA-Z0-9-]+(?:.[a-zA-Z0-9-]+)*$" title="Ingrese una dirección de correo válida." autocomplete="new-user" required="">
                        </div>
                    </div>
                    <div id="seccion-msj"></div>
                    <button class="btn-lg btn-primary w-100 mb-3" id="btn-enviar" type="submit"><i class="fas fa-undo px-1"></i>Recuperar</button>
                </form>
            </div>
            <div class="col-md-6 col-lg-8 p-4 d-none d-md-block">
                <div class="display-4 text-white animated slideInLeft">Recupera tu cuenta, <br><strong>Módulo informático de <br></strong><strong>carga, filtro, resumen <br></strong><strong>y gráficos de información</strong></div>
                <p class="lead text-white mt-4 animated bounceInUp">
                    Ingresa con tu&nbsp;<strong>correo electrónico&nbsp;</strong>y te enviaremos&nbsp; <br>
                    los pasos para recuperar tu&nbsp;<strong>contraseña.&nbsp; <br></strong>
                </p>
            </div>
        </div>
    </div>
</div>



